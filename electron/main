// electron/main.js
const { app, BrowserWindow, ipcMain } = require('electron'); // Aggiungi ipcMain
const path = require('path');
const player = require('play-sound'); // Aggiungi questo

function createWindow() {
  const mainWindow = new BrowserWindow({
    width: 1200,
    height: 800,
    webPreferences: {
      // Rileva il file preload.js
      preload: path.join(__dirname, 'preload.js'),
    },
  });

  // Carica l'app servita da Vite in modalitÃ  sviluppo
  mainWindow.loadURL('http://localhost:5173');

  // Opzionale: apre gli strumenti per sviluppatori
  // mainWindow.webContents.openDevTools();
}

app.whenReady().then(createWindow);

app.on('window-all-closed', () => {
  if (process.platform !== 'darwin') {
    app.quit();
  }
});

app.on('activate', () => {
  if (BrowserWindow.getAllWindows().length === 0) {
    createWindow();
  }
});
